<div class="row">
  <div class="col-xs-12">
    <h2>User info</h2>
   	<%= attachment_image_tag user, :profile_image, format: 'jpg', class: "pull-left list-img", fallback: "no_image.jpg", size:"100Ã—100" %>
	<table class="table">
		  <tr>
		    <th>name</th><td><%= user.name %></td>
		  </tr>
		  <tr>
		    <th>introduction</th><td><%= user.introduction %></td>
		  </tr>
      <tr>
        <th>follows</th><td><%= user.followings.count %></td>
      </tr>
      <tr>
        <th>followers</th><td><%= user.followers.count %></td>
      </tr>
  </table>
  </div>
  <div class="col-xs-12">
    <% if user.id == current_user.id %>
      <%= link_to edit_user_path(user.id) do %>
      <div class="btn btn-default col-xs-12 glyphicon glyphicon-wrench"></div>
      <% end %>
    <% else %>
      <%= link_to user_path(current_user.id) do %>
      <div class="btn btn-default col-xs-12 glyphicon glyphicon-wrench"></div>
      <% end %>
    <% end %>
  </div>
</div>

