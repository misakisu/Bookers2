<div class="text-danger">
<% if @user.errors.any? %>
    <h3><%= @user.errors.count %> error prohibited this user from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %><li>
      <% end %>
    </ul>
<% end %>
</div>

<div class="container">
<h2>User info</h2>
<%= form_for(@user) do |f| %>
    <div class="field">
        <label>Name </label><%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
    </div>
    <div class="field">
        <label>Image </label><%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="filed">
    <label>Introduction</label>
    <%= f.text_area :introduction, autofocus: true %>
    </div>
    <%= f.submit "Update User" %>
<% end %>