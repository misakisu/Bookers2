<div class="text-danger">
<% if book.errors.any? %>
    <h3><%= book.errors.count %> error prohibited this book from being saved:</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %><li>
      <% end %>
    </ul>
<% end %>
</div>

<div class="row">
  <div class="col-xs-12 form-group">
    <h2>New book</h2>
    <%= form_for(book) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title%>

    <%= f.label :body %>
    <%= f.text_area :body%>
    <%= f.submit ' Create Book ', class:"btn btn-primar" %>
    <% end %>
  </div>
</div>

